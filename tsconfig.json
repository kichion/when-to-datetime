{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "#/*": ["*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "newLine": "lf",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "tests"]
}
